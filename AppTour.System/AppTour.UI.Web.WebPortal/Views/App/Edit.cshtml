@model AppTour.Model.Models.App.AppModel
<script type="text/javascript">
    $(function () {
        $("input:submit, button, #button").button();
        $("#Enterprise_Id").addClass("text ui-widget ui-corner-all");
        $("#Name").addClass("text ui-widget-content ui-corner-all");
        $("#Description").addClass("text ui-widget-content ui-corner-all");
        $("#Version").addClass("text ui-widget-content ui-corner-all");
        $("#URL").addClass("text ui-widget-content ui-corner-all");
    });
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewRes.App.AppHeader</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreationDate)
        @Html.HiddenFor(model => model.UpdateDate)

        <div class="editor-label">
            @Html.Label(@ViewRes.App.Empresa)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Enterprise.Id, (SelectList)ViewBag.Enterprises)
            @Html.ValidationMessageFor(model => model.Enterprise.Id)
        </div>

        <div class="editor-label">
            @Html.Label(@ViewRes.App.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.Label(@ViewRes.App.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.Label(@ViewRes.App.Version)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Version)
            @Html.ValidationMessageFor(model => model.Version)
        </div>

        <div class="editor-label">
            @Html.Label(@ViewRes.App.URL)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.URL)
            @Html.ValidationMessageFor(model => model.URL)
        </div>

        <p>
            <input type="submit" value="@ViewRes.SharedStrings.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(@ViewRes.App.Lista, "Index", new { controller = "App" }, new { id = "button" })
</div>
