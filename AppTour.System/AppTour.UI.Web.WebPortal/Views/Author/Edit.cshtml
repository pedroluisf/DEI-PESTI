@model AppTour.Model.Models.Author.AuthorModel
@{ 
    ViewBag.Title = @ViewRes.Author.Criar;   
}
<script type="text/javascript">
    $(function () {
        $("input:submit, button, #button").button();
        $("#Enterprise_Id").addClass("text ui-widget ui-corner-all");
        $("#Name").addClass("text ui-widget-content ui-corner-all");
        $("#Email").addClass("text ui-widget-content ui-corner-all");
        $("#RealName").addClass("text ui-widget-content ui-corner-all");
    });
</script>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewRes.Author.AutorHeader</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.CreationDate)
        @Html.HiddenFor(model => model.UpdateDate)
        
        <div class="editor-label">
            @Html.Label(@ViewRes.Author.Empresa)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Enterprise.Id, (SelectList)ViewBag.Enterprises)
            @Html.ValidationMessageFor(model => model.Enterprise.Id)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Author.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Author.RealName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RealName)
            @Html.ValidationMessageFor(model => model.RealName)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Author.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <p>
            <input type="submit" value="@ViewRes.SharedStrings.Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink(@ViewRes.Author.Lista, "Index", new { controller = "Author" }, new { id = "button" })
</div>
