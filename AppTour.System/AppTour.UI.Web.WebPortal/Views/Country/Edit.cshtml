@model AppTour.Model.Models.Country.CountryModel
@{
    ViewBag.Title = @ViewRes.Country.Edit;
}
<script type="text/javascript">
    $(function () {
        $("input:submit, button, #button").button();
        $("#ISO").addClass("text ui-widget-content ui-corner-all");
        $("#ISO3").addClass("text ui-widget-content ui-corner-all");
        $("#Name").addClass("text ui-widget-content ui-corner-all");
        $("#CountryName").addClass("text ui-widget-content ui-corner-all");
        $("#CountryCode").addClass("text ui-widget-content ui-corner-all");
    });
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>CountryModel</legend>
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @Html.Label(@ViewRes.Country.ISO)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ISO)
            @Html.ValidationMessageFor(model => model.ISO)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Country.ISO3)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ISO3)
            @Html.ValidationMessageFor(model => model.ISO3)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Country.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Country.CountryName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CountryName)
            @Html.ValidationMessageFor(model => model.CountryName)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Country.CountryCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CountryCode)
            @Html.ValidationMessageFor(model => model.CountryCode)
        </div>
        <p>
            <input type="submit" value="@ViewRes.Country.Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink(@ViewRes.Author.Lista, "Index", new { controller = "Country" }, new { id = "button" })
</div>
