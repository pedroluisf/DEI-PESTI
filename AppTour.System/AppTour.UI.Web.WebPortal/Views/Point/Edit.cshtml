@model AppTour.UI.Web.WebPortal.Models.PointViewModel
@{
    ViewBag.Title = @ViewRes.Point.Editar;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("input:checkbox, button, #button").button();
        $("#City_Id").addClass("text ui-widget ui-corner-all");
        $("#Name").addClass("text ui-widget-content ui-corner-all");
        $("#Address").addClass("text ui-widget-content ui-corner-all");
        $("#PostalCode").addClass("text ui-widget-content ui-corner-all");
        $("#Coordenate").addClass("text ui-widget-content ui-corner-all");
        $("#PhoneNumber").addClass("text ui-widget-content ui-corner-all");
        $("#SourceURL").addClass("text ui-widget-content ui-corner-all");
        $("#URL").addClass("text ui-widget-content ui-corner-all");
        $("#attribute").button({ icons: { primary: "ui-icon-tag"} });
        $("#save").button({ icons: { primary: "ui-icon-disk"} });
        $("#save").click(function () {
            $("#points").submit();
        });
    });
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Point", FormMethod.Post, new { id = "points" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewRes.Point.PointHeader</legend>
        @Html.HiddenFor(model => model.Id)
        <div class="editor-label">
            @ViewRes.Point.Nome
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @ViewRes.Point.Endereco
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>
        <div class="editor-label">
            @ViewRes.Point.PostalCode
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PostalCode)
            @Html.ValidationMessageFor(model => model.PostalCode)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Point.City)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.City.Id, (SelectList)ViewBag.City)
            @Html.ValidationMessageFor(model => model.City.Id)
        </div>
        <div class="editor-label">
            @ViewRes.Point.Coordenada
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Coordenate)
            @Html.ValidationMessageFor(model => model.Coordenate)
        </div>
        <div class="editor-label">
            @ViewRes.Point.PhoneNumber
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
        <div class="editor-label">
            @ViewRes.Point.URL
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.URL)
            @Html.ValidationMessageFor(model => model.URL)
        </div>
        <div class="editor-label">
            @ViewRes.Point.SourceURL
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SourceURL)
            @Html.ValidationMessageFor(model => model.SourceURL)
        </div>
        <div class="editor-label">
            @Html.Label(@ViewRes.Point.Topics)
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.SelectedTopicId, (MultiSelectList)ViewBag.Topics)
            @Html.ValidationMessageFor(model => model.Topics)
        </div>
        <div class="editor-label">
            <label for="IsActive">@ViewRes.Point.Activo</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsActive)
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
        <p>
            <a href="#" id="save">@ViewRes.SharedStrings.Save</a>
            @Html.ActionLink(@ViewRes.Point.LstAttributos, "Index", new { controller = "Attribute", id = @Model.Id }, new { id = "attribute" })
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink(@ViewRes.Point.Lista, "Index", new { controller = "Point" }, new { id = "button" })
</div>
