@model AppTour.UI.Web.WebPortal.Models.RegisterModel
@{
	ViewBag.Title = "Register";
}
<div class="ui-widget">
	<div class="ui-state-highlight ui-corner-all" style="margin-top: 10px; margin-bottom: 10px;
		padding: 0 .7em;">
		<p>
			<span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span>
			<strong>Registo:</strong> Ao registar-se está a concodar com os termos e condições
			da AppTour Inc.
		</p>
		<p>
			<span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
			<strong>Password:</strong> A password tem o tamanho de @Membership.MinRequiredPasswordLength
			caracteres.</p>
	</div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
	$(function () {
		$("input:submit", "#register").button();
	});
</script>
@using (Html.BeginForm())
{
	@Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
	<div id="register">
		<fieldset>
			<legend>Account Information</legend>
			<div class="editor-label">
				@Html.LabelFor(m => m.UserName)
			</div>
			<div class="editor-field">
				@Html.TextBoxFor(m => m.UserName, new { @class = "text ui-widget-content ui-corner-all", size = "20px" })
				@Html.ValidationMessageFor(m => m.UserName)
			</div>
			<div class="editor-label">
				@Html.LabelFor(m => m.RealName)
			</div>
			<div class="editor-field">
				@Html.TextBoxFor(m => m.RealName, new { @class = "text ui-widget-content ui-corner-all", size = "30px" })
				@Html.ValidationMessageFor(m => m.RealName)
			</div>
			<div class="editor-label">
				@Html.LabelFor(m => m.Email)
			</div>
			<div class="editor-field">
				@Html.TextBoxFor(m => m.Email, new { @class = "text ui-widget-content ui-corner-all", size = "30px" })
				@Html.ValidationMessageFor(m => m.Email)
			</div>
			<div class="editor-label">
				@Html.LabelFor(m => m.Password)
			</div>
			<div class="editor-field">
				@Html.PasswordFor(m => m.Password, new { @class = "text ui-widget-content ui-corner-all", size = "30px" })
				@Html.ValidationMessageFor(m => m.Password)
			</div>
			<div class="editor-label">
				@Html.LabelFor(m => m.ConfirmPassword)
			</div>
			<div class="editor-field">
				@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text ui-widget-content ui-corner-all", size = "30px" })
				@Html.ValidationMessageFor(m => m.ConfirmPassword)
			</div>
			<p>
				<input type="submit" value="Register" />
			</p>
		</fieldset>
	</div>
}
