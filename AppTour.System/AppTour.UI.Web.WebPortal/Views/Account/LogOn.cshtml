@model AppTour.UI.Web.WebPortal.Models.LogOnModel
@{
    ViewBag.Title = @ViewRes.Login.Titulo;   
}
<p>
    @ViewRes.Login.Descricao
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:submit", "#logon").button();
    });
</script>
@Html.ValidationSummary(true, @ViewRes.Login.Error)
@using (Html.BeginForm())
{
    <div id="logon">
        <fieldset>
            <legend>@ViewRes.Login.Header</legend>
            <div class="editor-label">
                @Html.Label(ViewRes.Login.Utilizador)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { @class = "text ui-widget-content ui-corner-all", size = "25px" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                @Html.Label(ViewRes.Login.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { @class = "text ui-widget-content ui-corner-all", size = "25px" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.Label(ViewRes.Login.Lembrar)
            </div>
            <p>
                <input type="submit" value="@ViewRes.Login.Submit" />
            </p>
        </fieldset>
    </div>
}
